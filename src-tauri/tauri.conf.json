{
  "$schema": "https://schema.tauri.app/config/2.0.0",
  "productName": "erpy",
  "version": "0.1.0",
  "identifier": "com.erpy-ui.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../build"
  },

  "app": {
    "windows": [
      {
        "title": "erpy",
        "width": 800,
        "height": 800
      }
    ],
    "security": {
      "csp": "default-src 'self' asset: http://asset.localhost",
      "devCsp": "default-src 'self' asset: http://asset.localhost",
      "assetProtocol": {
        "enable": true,
        "scope": ["**"]
      }
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
